# 2. Histograms for key variables

# Histogram of Total Sleep Time (TST)
ggplot(sleep, aes(x = TST)) +
  geom_histogram(binwidth = 30, fill = "blue", color = "black", alpha = 0.7) +
  labs(title = "Histogram of Total Sleep Time (TST)",
       x = "TST (minutes)",
       y = "Frequency")

